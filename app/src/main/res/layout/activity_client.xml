<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".CarRentalClasses.ClientActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/main"
        android:gravity="center"
        android:text="@string/select_rental_location"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:entries="@array/locations"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How do you want to pay?"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/rdgPay"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_margin="2dp"

        android:background="@color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rdbHourly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:textColor="@color/main"
            android:text="@string/hourly"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rdbDaily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:textColor="@color/main"
            android:text="@string/daily"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView89"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start Date/Time:"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etStartDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:editable="false"
            android:ems="10"
            android:focusable="false"
            android:inputType="datetime"
            android:textColor="@color/bg"
             />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView322"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="End Date/Time:"
            android:textColor="@color/common_google_signin_btn_text_dark_default"

            android:textStyle="bold" />

        <EditText
            android:id="@+id/etEndDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:ems="10"
            android:inputType="datetime"
            android:textColor="@color/bg"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tvSelections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:textColor="@color/main"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insurance Required (Extra $15 per Day)?"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/rdgYN"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_margin="2dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rdbYes"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Yes"
            android:textColor="@color/main"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rdbNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/main"
            android:text="No"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please select your card type:"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/rdgCardType"
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:layout_margin="2dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rdbVisa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Visa"
            android:textColor="@color/main"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rdbMC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mastercard"
            android:textColor="@color/main"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rdbAmex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="American Express"
            android:textColor="@color/main"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rdbDiscover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discover"
            android:textSize="20sp"
            android:textColor="@color/main"
            android:textStyle="bold" />
    </RadioGroup>


    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Card Number:"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etCardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:ems="10"
        android:layout_margin="10dp"
        android:hint="Enter Credit Card Number"
        android:inputType="phone"
        android:textColor="@color/bg"
        android:textColorHint="@color/bg"
        />

    <CheckBox
        android:id="@+id/cbTerms"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_margin="15dp"
        android:background="@color/white"
        android:text="Accept the Terms and Conditions"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:background="@color/main"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="Submit" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg"
        android:textColor="@color/bg"
        android:text="Button"
        tools:visibility="gone" />
   <!-- add btn here-->
</LinearLayout>
    </ScrollView>
</LinearLayout>